//- Declaration
mixin slider(_class, count)
  - var n = 0;
  .slider(class=_class)
    .slider__photo
      input.slider__input(name="slider" type="radio" id="slide-1" checked)
      .slider__item 
        img.img.img--responsive(src="img/slider_1.jpg")
      while n < (count+1)
        - n++
        input.slider__input(name="slider" type="radio" id="slide-" + n)
        .slider__item 
          img.img.img--responsive(src="img/slider_"+ n+".jpg")
    - n = 0;
    .slider__thumbs
      while n < count
        - n++
        label.slider__thumb(for="slide-" + n)
          img.img.img--responsive(src="img/slider_"+ n+".jpg", alt="Слайд " + n)